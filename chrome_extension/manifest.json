{
    "manifest_version": 3,
    "name": "Twitter Regex",
    "version": "1.0",
    "description": "A Chrome extension to filter tweets based on a regular expression",
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "128": "icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://twitter.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}